pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code repository
                git '
https://github.com/Devanshu1Mundra/dotnetApi.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    sh 'sudo docker build -t test-image:image1 .'
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                // Push the Docker image to a registry
                script {
                    sh 'sudo docker login -u your-dockerhub-username -p your-dockerhub-password'
                    sh 'sudo docker tag test-image:image1 devanshumundra/dockerimage:test'
                    sh 'sudo docker push devanshumundra/dockerimage:test'
                }
            }
        }
    }
}
