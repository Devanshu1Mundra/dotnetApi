pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Define the Dockerfile path relative to the Jenkins workspace
                    def dockerfilePath = './WheatherApi/Dockerfile'

                    // Build the Docker image using the Dockerfile
                    docker.build('dockerimage', '-f ' + dockerfilePath + ' .')
                }
            }
        }
    }
}
